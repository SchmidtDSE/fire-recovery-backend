{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "FastAPI (Development)",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "src.app:app",
                "--host",
                "0.0.0.0",
                "--port",
                "8000",
                "--reload"
            ],
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}/.pixi/envs/default/bin/python", // Use pixi environment
                "PYTHONARGS": "-Xfrozen_modules=off" // For dask debugging 
            },
            "envFile": "${workspaceFolder}/.devcontainer.env"
        }
    ]
}