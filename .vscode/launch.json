{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "FastAPI (Development)",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "src.app:app",
                "--host",
                "0.0.0.0",
                "--port",
                "8000",
                "--reload",
                "--log-level",
                "debug"
            ],
            "python": "${workspaceFolder}/.pixi/envs/default/bin/python",
            "justMyCode": false,
            "env": {
                "PYTHONARGS": "-Xfrozen_modules=off", // For dask debugging
                "PYTHONUNBUFFERED": "1",
                "LOG_LEVEL": "DEBUG"
            },
            "envFile": "${workspaceFolder}/.devcontainer/.env"
        },
        {
            "name": "Rustac Obstore Reproduction",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/rustac_obstore_reproduction.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "python": "${workspaceFolder}/.pixi/envs/default/bin/python",
            "envFile": "${workspaceFolder}/.devcontainer/test.env"
        }
    ]
}